<body>
    <div class="container main-section">
      
        <div class="row">
            <div class="col-lg-12 pb-2">
             
            </div>
            <div class="col-lg-12 pl-3 pt-3">
                <table class="table table-hover border bg-white">
                    <thead>

                        <tr>
                            <th>Product</th>
                            <th>Price</th>
                            <th style="width:10%;">Quantity</th>
                            <th>Subtotal</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            Cart myCart = (Cart)Model;

                            foreach (Item product in myCart.items)
                            {
                                <tr>
                                    <td>
                                        <div class="row">
                                            <div class="col-lg-2 Product-img">
                                                <img src="@product.image" alt="..." class="img-responsive" />
                                            </div>
                                            <div class="col-lg-10">
                                                <h4 class="nomargin">@product.crop_name</h4>
                                                <input type="hidden" name="@product.cropID" />
                                            </div>
                                        </div>
                                    </td>
                                    <td> @product.unit_price </td>
                                    <td data-th="Quantity">
                                        <input type="text" class="form-control textenter" value="@product.quantity" name="quantity">
                                    </td>
                                    <td>@product.total</td>
                                    <td class="actions" data-th="" style="width:10%;">
                                        @* <button class="btn btn-info btn-sm"><i class="fa fa-refresh"></i></button>*@
                                        <a href="/ShoppingCart/Remove1/@product.cropID" class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i></a>
                                    </td>
                                </tr>
                            }


                            <tr>
                                <td><a href="/crops/SelectAllFarmers" class="btn btn-warning text-white"><i class="fa fa-angle-left"></i> Continue Shopping</a></td>
                                <td colspan="2" class="hidden-xs"></td>
                                <td class="hidden-xs text-center" style="width:10%;"><strong>Total :@myCart.gettotal(myCart.items) </strong></td>
                                <td><a href="/shoppingcart/order" class="btn btn-success btn-block">Checkout <i class="fa fa-angle-right"></i></a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
